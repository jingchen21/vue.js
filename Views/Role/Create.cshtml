@model MVCTest.Models.Role

<style>
    .head-img {
        height: 80px;
        display: inline-block;
        width: 80px;
        border: 2px solid #e4e4e4;
        border-radius: 50%;
        background-size: cover;
    }
</style>
<div style="margin-bottom:20px;">
    <a class="btn btn-primary  btn-sm" href="/Role/Index">返回首页</a>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="row">
        @Html.ValidationSummary(true)
        <div class="col-lg-12">
            <section class="panel">
                <header class="panel-heading">
                    新增角色
                </header>
                <div class="panel-body">
                    <div class="form">
                        <div class="form-validate form-horizontal" id="feedback_form">
                            <div class="form-group ">
                                <label for="cname" class="control-label col-lg-2">角色名称 <span class="required">*</span></label>
                                <div class="col-lg-10">
                                    <input class="form-control" id="RoleName" name="RoleName" type="text" value="@(Model!=null?Model.RoleName:"")" />
                                    @Html.ValidationMessageFor(model => model.RoleName)
                                </div>
                            </div>
                            <div class="form-group ">
                                <label for="cemail" class="control-label col-lg-2">排序 <span class="required">*</span></label>
                                <div class="col-lg-10">
                                    <input class="form-control " id="Sort" type="number" name="Sort" value="@(Model != null ? Model.Sort.ToString() : "")" />
                                    @Html.ValidationMessageFor(model => model.Sort)
                                </div>
                            </div>
                            <div class="form-group ">
                                <label for="cemail" class="control-label col-lg-2">功能模块 <span class="required">*</span></label>
                                <div class="col-lg-10" id="moduleList">
                                    @foreach (MVCTest.Models.Module item in ViewBag.Modules)
                                    {
                                        <input type="checkbox" name="moduleIds" value="@item.Id" />  <span>@item.ModuleName &nbsp;&nbsp;</span>
                                    }
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-lg-offset-2 col-lg-10">
                                    <button class="btn btn-primary" type="submit">创建</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>
}

